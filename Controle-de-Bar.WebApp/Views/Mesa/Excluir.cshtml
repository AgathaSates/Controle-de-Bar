﻿@using Controle_de_Bar.WebApp.Models

@model ExcluirMesaViewModel

@{
    ViewBag.Titulo = "Exclusão de Mesa";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card border-0">
            <div class="card-body p-md-5 fundo-card">
                <h3>Formulário de Exclusão</h3>

                <p class="mt-4">Você deseja realmente excluir a mesa "@Model.Numero"?</p>

                <form asp-action="Excluir" asp-route-id="@Model.Id">
                    <div class="form-group d-flex align-items-center justify-content-end gap-3">
                        <a href="/mesas" class="texto-card">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-danger px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>