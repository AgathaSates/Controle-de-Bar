@model CadastrarGarcomViewModel

@{
    ViewBag.Titulo = "Cadastro de Garçom";
}

<h1 class="texto text-center">Cadastro de Garçons</h1>

<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card border-0">
            <div class="card-body p-md-5 fundo-card">
                <form asp-action="Cadastrar">
                    <h3>Formulário de Cadastro</h3>

                    @if (ViewData.ModelState["CadastroUnico"]?.Errors.Count > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
                            @ViewData.ModelState["CadastroUnico"]!.Errors.First().ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Nome" class="control-label fs-5">Nome:</label>
                        <input asp-for="Nome" class="form-control meu-input" placeholder="Digite o nome do Garçom" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Cpf" class="control-label fs-5">CPF:</label>
                        <input asp-for="Cpf" class="form-control meu-input" placeholder="Digite o cpf do Garçom" />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/garcons" class="texto-card">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-success rounded-3 px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}